<div class= "container-fluid">
	<div class="home-page">
		<div class="col-12">
			<br>
			<h3> <%= @jobs.count%> jobs for you </h3>
			<br>
			<%= paginate @jobs, theme: 'twitter-bootstrap-4' %>
			<div class="row ">
				<% @jobs.each do |f| %>
					<div class="col-lg-4 col-md-6 col-12 item-jobs">
						<div class="info-item-jobs">
							<%= image_tag "#{f&.photo}", class: "image-photo-jobs"%>
						  <div class="overlay">
						    <div class="text">Title: <%= f.name %></div>
						    <div class="text">Salary: <%= f.price %></div>
						    <div class="text">Category: <%= f.category.title %></div>
							   <div class="btn-group">
							    <button class="btn btn-apply-item"> Apply </button><button class="btn btn-show-item"> Detail </button>
							  </div>
						  </div>
						</div>
					</div>
				<% end %>
				<br>
				<%= paginate @jobs, theme: 'twitter-bootstrap-4' %>
			</div>
		</div>
	</div>
</div>